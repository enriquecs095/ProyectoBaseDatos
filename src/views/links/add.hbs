<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="ID_Proyecto" placeholder="ID Proyecto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Title" placeholder="Titulo Proyecto" >
                        </div>
                        <div class="form-group">
                            <label for="presupuesto">Presupuesto:</label>
                                <input type="number" id="presupuesto" name="presupuesto">
                        </div>
                        <div class="form-group">
                            <textarea name="Detalles_de_Proyecto" rows="2" class="form-control" placeholder="Detalles"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url_trello" class="form-control" placeholder="URL Trello">
                        </div>
                        <div class="form-group">
                            <input type="url" name="url_github" class="form-control" placeholder="URL GitHub">
                        </div>
                        <div class="form-group">
                             <select id="ET" name="ET">
                                <option value="ET1">ET1</option>
                                <option value="ET2">ET2</option>
                                <option value="ET3">ET2</option>
                                <option value="ET4">ET3</option>
                            </select> 
                        </div>
                        <div class="form-group">
                             <select id="Puesto" name="Puesto">
                                <option value="PE1">Cliente</option>
                                <option value="PE2">Empleado</option>
                                <option value="PE3">Administrador</option>
                            </select> 
                        </div>
                        <div class="form-group">
                            <label for="Inicio">Fecha Inicio:</label>
                                <input type="date" id="Inicio" name="Inicio">
                        </div>
                        <div class="form-group">
                            <label for="Entrega">Fecha Entrega:</label>
                                <input type="date" id="Entrega" name="Entrega">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>