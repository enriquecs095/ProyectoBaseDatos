<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/agregarep" method="POST">
                        <div class="form-group">
                            <h6>Seleccione Empleado:</h6>
                             <select id="Empleado" name="Empleado" aria-placeholder="Proyecto" required >
                                {{#each nEmpleados}}
                                    <option value="{{Numero_Empleado}}">{{Numero_Empleado}} - {{Nombre}}</option>
                                {{/each}}
                            </select> 
                        </div>
                        <div class="form-group">
                            <h6>Seleccione Proyecto:</h6>
                             <select id="Proyecto" name="Proyecto" aria-placeholder="Proyecto" required >
                                {{#each nProyectos}}
                                    <option value="{{ID_Proyectos}}">{{ID_Proyectos}} - {{Nombre}}</option>
                                {{/each}}
                            </select> 
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Agregar
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-body">
                    <form action="/user" method="POST">
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Retornar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>