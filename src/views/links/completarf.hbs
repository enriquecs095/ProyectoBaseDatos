                                    {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Finalizar Funcionalidad
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-body">
                    <form action="/user" method="POST">
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Retornar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>