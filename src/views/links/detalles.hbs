<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Detalle de Actividades</h3>
                </div>
                <div class="card-body">
                    <form action="/agregarA" method="POST">
                        <select id="Actividad" name="Actividad" >
                                {{#each nActividades}}
                                    <option value="{{ID_Actividad}}">{{ID_Actividad}} - {{Tipo_actividad}} - {{ID_Funcionalidad}}</option>
                                {{/each}}
                            </select> 
                        <div class="form-group">
                            <input type="text" name="Actividades" rows="3" placeholder="Actvidades Realizadas" class="form-control p-2">
                        </div> 
                        <div class="form-group">
                            <input type="text" name="Horas" rows="1" placeholder="Horas Trabajadas" class="form-control p-2">
                        </div> 
                        <select id="Estado" name="Estado" class="block" aria-placeholder="estado">
                                    <option value="0">No Terminado</option>
                                    <option value="1">Terminado</option>
                            </select>
                        <div class="form-group p-4">
                            <button class="btn btn-success btn-block">
                                Agregar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>