<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Empleado {{ID_Usuario}}</h3>
                </div>
                <div class="card-body">
                    <form action="/inserte" method="POST">
                        <div class="form-group">
                            <input type="text" name="Nombre" placeholder="Nombre" class="form-control" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="Direccion" placeholder="Direccion" class="form-control" required>
                        </div> 
                        <div class="form-group">
                            <input type="text" name="Jefe" placeholder="Codigo Jefe" class="form-control">
                        </div> 
                        <div class="form-group">
                            <input type="text" name="TipoEmpleado" placeholder="Tipo de empleado" class="form-control">
                        </div> 
                        <select id="EquipoTrabajo" name="EquipoTrabajo" aria-placeholder="Equipo de Trabajo" required>
                                {{#each EQ}}
                                    <option value="{{ID_Equipo_Trabajo}}">{{Nombre_Equipo_Trabajo}}</option>
                                {{/each}}
                            </select> 
                        <div class="form-group p-4">
                            <button class="btn btn-success btn-block">
                                Continuar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




